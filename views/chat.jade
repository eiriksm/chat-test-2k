extend layout

block scripts
  script(src="/socket.io/socket.io.js")

block content
  .container-fluid
      .row-fluid
        .col-sm-2
          h1 Online users
          ul.nav.nav-stacked.nav-tabs#users

        .col-sm-10.chat-wrap
          #messages
          .in-putter.col-sm-8
            form#sendmessage
              input(type="text")#message
              input(type="hidden", id="name", value=user.id)
              button.btn.btn-large#send.btn-danger
                i.icon-bolt
                |  Send
          script(src="sock.js")
